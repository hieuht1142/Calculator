<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_view"
        android:paddingRight="10dp"
        android:gravity="center|right"
        android:background="#DEE1ED"
        android:layout_weight="1"
        android:text=""
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_input"
        android:paddingRight="10dp"
        android:gravity="end"
        android:background="#DEE1ED"
        android:layout_weight="1"
        android:text="0"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_ce"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_c"
            android:layout_weight="1"
            android:text="C"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_bs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BS"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_div"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_7"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_8"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_9"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_mul"
            android:layout_weight="1"
            android:text="x"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_4"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_5"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_6"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_sub"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_1"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_2"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_3"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_add"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_neg"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_0"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_dec"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>

        <Button
            android:id="@+id/btn_eql"
            android:layout_weight="1"
            android:text="="
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

</LinearLayout>